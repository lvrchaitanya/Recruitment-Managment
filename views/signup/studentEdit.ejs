<% include ../partials/header %>

<h1 class=" d-flex justify-content-center">
	Update Your Details <%=data.sname%>!
</h1>
<div class=row>
	<form action="/MyAcc" class="mx-auto" method="POST">
		<div class="form-group">
			<input class="form-control " type="text" name="sName" placeholder="Name" value="<%=data.sname%>" required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="sUsn" placeholder="USN" value="<%=data.usn%>"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="sDepartment" placeholder="Department" value="<%=data.department%>"required>
		</div>
		
        <div class="form-group">
			<input class="form-control " type="text" name="sAddress" placeholder="Address" value="<%=data.address%>"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="sContactNo" placeholder="Contact No" value="<%=data.contactNo%>"required>
		</div>
		<div class="form-group">
			<input class="form-control " type="text" name="sCGPA" placeholder="CGPA" value="<%=data.cgpa%>" required>
		</div>
		
		<div class="form-group">
			<input class="form-control " type="text" name="resume" placeholder="Resume link" value="<%=data.resume%>" required>
		</div>
		<div class="form-group">
			<input class="btn  form-control btn-primary" type="submit" value="Update">
		</div>
	</form>
</div>


<% include ../partials/footer %>