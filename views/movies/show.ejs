	<div class="container">
		<div class="row mt-5">
			<div class="col-md-3">
				<p class="lead">OPTIONS</p>
				<ul id="leftButton" class="list-group">
					More Info</a>
					<% if(!currentUser || currentUser.role== 'student') {%>
					 <a class= "selection" href="/movies/<%=movie.offerId%>" ><li class="list-group-item active">Rectuitment details</li></a> 
					 <a class= "selection" href="/movies/register/<%=movie.offerID%>" ><li class="list-group-item active">Register </li></a>
					 <a class= "selection" href="/movies/feedback/<%=movie.offerID%>" ><li class="list-group-item active"> Give Feedback </li></a>
					
					  <%} else {%>
					
						<a class= "selection" href="/movies/<%=movie.offerId%>" ><li class="list-group-item active">Rectuitment details</li></a> 
						<a class= "selection" href="/movies/company/result/<%=movie.offerID%>" ><li class="list-group-item active">Update Result </li></a>
						<a class= "selection" href="/movies/company/delete/<%=movie.offerID%>" ><li class="list-group-item active"> Remove This offer </li></a>
						<a class= "selection" href="/movies/update/offer/<%=movie.offerID%>" ><li class="list-group-item active"> Edit Offer </li></a>
						
						<%}%>
				</ul>
			</div>
			<div class="col-md-9">
				<div class="card">
					
  					<div class="card-body">
						<h3 class="card-title"><%=comp.cName%></h3>
						<p class="card-text">Company Info:> <%=comp.cInfo%></p>
						<p class="card-text">Profile/Role :> <%=movie.role%></p>
						<p class="card-text">Job Description:> <%=movie.offerDisc%></p>
						<p class="card-text">Criteria :> <%=movie.coCgpa%> CGPA</p>
						<p class="card-text">Last Date :> <%=movie.lastDate%> </p>
					</div>
					
				</div>

				<div class="card-footer text-muted">
					<a href="/comments/new/<%=movie.offerID%>" class="btn btn-outline-secondary text-right">Ask a Question</a>
					<hr>
					
					<%comments.forEach((comment)=>{%>
					<div id="Comment">
						<strong>Question by <%=comment.username%>:</strong>&nbsp;<%=comment.que%><br>
						<strong>Response from Comp:</strong>&nbsp;<%=comment.ans%><br>
						<%if(currentUser && currentUser.role=="recruiter"){%>
						<a class="btn btn-success" href="/comments/edit/<%=comment._id%>" role="button">Respond</a>
						<%}%>
						
					</div>
					<%})%>
				</div>
			</div>
		</div>
	</div>
<% include ../partials/footer %>