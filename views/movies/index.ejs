<% include ../partials/header %>
<div class="container">	
<header class="jumbotron mt-5">
	<div class="container">	
		<h1 class="display-4">All JOBS</h1>
			  <p class="lead">All jobs for the ongoing placment/internship Drive are given below </p>
			  <% if(currentUser && currentUser.role == 'recruiter'){ %>
		<a class="btn btn-primary btn-lg" href="/movies/new" role="button">Add new Job</a>
		<%}%>
	</div>
</header>

<div class="row" style="display:flex; flex-wrap: wrap;">
	<% list.forEach((offer)=>{ %>
		
	<div class="col-md-3 col-sm-12 mx-1"> 
		<div class="card mx-auto" >
			<!-- <img src="" class="card-img-top" alt="..."> -->
			<div class="card-body">
				<h5 class="card-title"><%= offer.role %></h5>
				<p class="card-text"><%= offer.offerDisc %></p>
			</div>
			
			<a href="movies/<%=offer.offerID%>" class="btn btn-warning">More Info</a>
		</div>
	</div>
	<%})%>
</div>
<% include ../partials/footer %>
